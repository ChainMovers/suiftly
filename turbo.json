{
    "$schema": "https://turbo.build/schema.json",
    "remoteCache": {
        "signature": true
    },
    "globalEnv": ["HOME", "BLOB_CACHE_CONTROL", "PORT"],
    "tasks": {
        "build": {
            "dependsOn": [
                "compile:js",
                "compile:typedefs",
                "test:lint",
                "test:prettier",
                "test:treeshakability:browser",
                "test:treeshakability:native",
                "test:treeshakability:node",
                "test:typecheck",
                "test:unit:browser",
                "test:unit:node"
            ],
            "outputs": ["dist/**"]
        },
        "compile:js": {
            "dependsOn": ["^compile:js"],
            "inputs": ["$TURBO_DEFAULT$", "tsconfig.*", "src/**", "../build-scripts/*.ts"],
            "outputs": ["dist/**"]
        },
        "compile:typedefs": {
            "dependsOn": ["^compile:typedefs"],
            "inputs": ["$TURBO_DEFAULT$", "tsconfig.*", "src/**"],
            "outputs": ["dist/**/*.d.ts"]
        },
        "publish-packages": {
            "cache": false,
            "dependsOn": [
                "compile:js",
                "compile:typedefs",
                "test:lint",
                "test:prettier",
                "test:typecheck",
                "test:unit:browser",
                "test:unit:node",
                "test:treeshakability:browser",
                "test:treeshakability:native",
                "test:treeshakability:node"
            ],
            "passThroughEnv": ["GH_TOKEN", "NPM_TOKEN", "PUBLISH_TAG"]
        },
        "style:fix": {
            "inputs": ["$TURBO_DEFAULT$", "*"],
            "outputs": ["*"]
        },
        "test:lint": {
            "dependsOn": ["^compile:typedefs"],
            "inputs": ["$TURBO_DEFAULT$", "src/**", "test/**"],
            "outputs": []
        },
        "test:prettier": {
            "inputs": ["$TURBO_DEFAULT$", "*"]
        },
        "test:typecheck": {
            "dependsOn": ["^compile:typedefs"],
            "inputs": ["$TURBO_DEFAULT$", "tsconfig.*", "src/**"]
        },
        "test:unit:browser": {
            "dependsOn": ["^compile:js"],
            "inputs": ["$TURBO_DEFAULT$", "src/**"]
        },
        "test:unit:node": {
            "dependsOn": ["^compile:js"],
            "inputs": ["$TURBO_DEFAULT$", "src/**"]
        },
        "test:treeshakability:browser": {
            "dependsOn": ["compile:js"]
        },
        "test:treeshakability:native": {
            "dependsOn": ["compile:js"]
        },
        "test:treeshakability:node": {
            "dependsOn": ["compile:js"]
        }
    },
    "ui": "tui"
}
